<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/month_year_dropdown_layout"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/year_selection_dropdown_layout"
        >

        <TextView
            android:id="@+id/year_selection_dropdown_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Year:"
            android:layout_marginBottom="5dp"
            />

        <Spinner
            android:id="@+id/year_selection_dropdown_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#33BBFF"

            android:prompt="@string/year_selection_title"
            android:layout_margin="5dp"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/month_selection_dropdown_layout"
        >

        <TextView
            android:id="@+id/month_selection_dropdown_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Month:"
            android:layout_marginBottom="5dp"
            />

        <Spinner
            android:id="@+id/month_selection_dropdown_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#33BBFF"
            android:prompt="@string/month_selection_title"
            android:layout_margin="5dp"
            />

    </LinearLayout>

</LinearLayout>